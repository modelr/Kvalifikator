{
  "name": "kvalifikator",
  "version": "1.0.0",
  "description": "Desktop app for lead qualification with Supabase",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint .",
    "dist:win": "electron-builder --win nsis"
  },
  "build": {
    "appId": "com.kvalifikator.app",
    "productName": "Kvalifikator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^9.20.1"
  }
}
